{
  "compilerOptions": {
    /* Base */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Transpile w/ TS */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    
    /* Node */
    "lib": ["es2022"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "./node_modules"
  ]
}